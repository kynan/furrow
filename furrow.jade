head
  meta(charset='utf-8')
  title Furrow
  meta(name='viewport', content='width=device-width')
body
  {{> notifications}}
  {{#if currentUser}}
    {{> main}}
    {{loginButtons align=right}}
  {{else}}
    {{> welcome}}
    {{loginButtons align=right}}
  {{/if}}

template(name="main")
  section(role="region")
    {{#if moodpane}}
      header
        menu(type="toolbar")
          a.friends
            span.icon.icon-user Friends
        h1 Furrow: your mood
      {{> setmood}}
      {{> mood}}
    {{else}}
      header
        menu(type="toolbar")
          a.mood
            span.icon.icon-compose Mood
        h1 Furrow: your friends
      {{> friendslist}}
    {{/if}}
