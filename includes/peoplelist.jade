template(name="peoplelist")
  {{#if friends}}
  article#friends(data-type="list")
    header Connect to your friends:
    ul
      {{#each friends}}
      li
        aside.pack-end
          img(src="{{image.url}}")
        {{#if is_friend}}
        aside
          button.danger.unfriend(id="{{_id}}") unfriend
        {{else}}
        {{#if is_invited}}
          aside
            button.disabled invited
        {{else}}
        {{#if _id}}
          aside
            button.recommend.connect(id="{{_id}}") connect
        {{else}}
          aside
            button.recommend.invite invite
        {{/if}}
        {{/if}}
        {{/if}}
        a(href="{{url}}")
          p {{name}}
          {{#if is_following}}
          p You are a friend
        {{/if}}
      {{/each}}
  {{/if}}
