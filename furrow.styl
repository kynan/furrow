@import '//cdnjs.cloudflare.com/ajax/libs/normalize/2.1.0/normalize.css'
@import 'style/buttons.css'
@import 'style/headers.css'
@import 'style/input_areas.css'
@import 'style/lists.css'
@import 'style/status.css'

html
  font 100 100%/1.4 Helvetica Neue, sans-serif
  letter-spacing 1px

body
  padding 0
  margin 0

h1, h2, h3, h4, h5, h6, p
  margin 0 auto
  max-width 20em

h1
  font-size 2em
  font-weight 100

p#tagline
  font-weight: normal

#happyoldman
  box-shadow 0 0 1em black, inset 0 0 1em black
  max-width 15em
  float left
  margin .5em

#happyoldman > img
  width 100%

.emd
  display inline-block
  margin 0 .2em

@media all and (min-width: 30em)
  html
    font-size 150%
