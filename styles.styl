@import '//cdnjs.cloudflare.com/ajax/libs/normalize/2.1.0/normalize.css'

html
  font 100 100%/1.4 Helvetica Neue, sans-serif
  letter-spacing 1px

body
  padding 0
  margin 0

h1, h2, h3, h4, h5, h6, p
  margin 0 auto
  max-width 20em

h1
  font-size 2em
  font-weight 100

section[role="region"] > header:first-child h1
  margin-left .5em

p#tagline
  font-weight: normal

#happyoldman
  box-shadow 0 0 1em black, inset 0 0 1em black
  max-width 15em
  float left
  margin .5em

#happyoldman > img
  width 100%

#login-email
  font-size 100%

#login-password
  font-size 100%

.emd
  display inline-block
  margin 0 .2em

[data-type="list"]
  padding 0

@media all and (max-width: 720px)
  html
    font-size 80%
